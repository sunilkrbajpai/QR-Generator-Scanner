<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dp" />
            <stroke android:width="1dip" android:color="#7fff46" />
            <gradient android:angle="-90" android:startColor="#a4d15e" android:endColor="#82af54" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dp" />
            <stroke android:width="1dip" android:color="#1e9933" />
            <solid android:color="#1bac3b"/>
        </shape>
    </item>  
    <item >
       <shape android:shape="rectangle"  >
            <corners android:radius="15dp" />
            <stroke android:width="1dip" android:color="#06c261" />
            <gradient android:angle="-90" android:startColor="#1bc139" android:endColor="#048b38" />
       </shape>
    </item>
</selector>